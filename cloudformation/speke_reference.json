{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "KeyBucketCloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "", [
                                "SPEKE CDN for ",
                                {
                                    "Ref": "KeyBucket"
                                }
                            ]
                        ]
                    },
                    "Enabled": true,
                    "PriceClass": "PriceClass_All",
                    "DefaultCacheBehavior": {
                        "TargetOriginId": {
                            "Ref": "KeyBucket"
                        },
                        "ViewerProtocolPolicy": "https-only",
                        "MinTTL": 0,
                        "AllowedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "CachedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "ForwardedValues": {
                            "QueryString": false
                        }
                    },
                    "Origins": [{
                        "DomainName": {
                            "Fn::Join": [
                                "", [{
                                        "Ref": "KeyBucket"
                                    },
                                    ".s3-website-",
                                    {
                                        "Ref": "AWS::Region"
                                    },
                                    ".amazonaws.com"
                                ]
                            ]
                        },
                        "Id": {
                            "Ref": "KeyBucket"
                        },
                        "CustomOriginConfig": {
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Restrictions": {
                        "GeoRestriction": {
                            "RestrictionType": "none",
                            "Locations": []
                        }
                    },
                    "ViewerCertificate": {
                        "CloudFrontDefaultCertificate": "true",
                        "MinimumProtocolVersion": "TLSv1"
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "9948befd-e4ac-4825-952d-14a9fe0480cf"
                }
            }
        },
        "KeyBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html"
                },
                "AccessControl": "Private",
                "LifecycleConfiguration": {
                    "Rules": [{
                        "ExpirationInDays": {
                            "Ref": "KeyRetentionDays"
                        },
                        "Id": "Expire old keys",
                        "Status": "Enabled"
                    }]
                },
                "VersioningConfiguration": {
                    "Status": "Suspended"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "eeff2fe0-457a-46f7-b070-a57851af8a71"
                }
            }
        },
        "KeyBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "KeyBucket"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Sid": "AddPerm",
                        "Effect": "Allow",
                        "Principal": "*",
                        "Action": "s3:GetObject",
                        "Resource": {
                            "Fn::Join": [
                                "", [
                                    "arn:aws:s3:::",
                                    {
                                        "Ref": "KeyBucket"
                                    },
                                    "/*"
                                ]
                            ]
                        }
                    }]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "3de75a2b-1f5f-4d21-acc4-bc46f7d07aaf"
                }
            }
        },
        "SPEKEServerLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [
                                "rodeolabz",
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "speke/speke-reference-lambda.zip"
                },
                "Environment": {
                    "Variables": {
                        "keystore_bucket": {
                            "Ref": "KeyBucket"
                        },
                        "keystore_url": {
                            "Fn::Join": [
                                "", [
                                    "https://",
                                    {
                                        "Fn::GetAtt": [
                                            "KeyBucketCloudFrontDistribution",
                                            "DomainName"
                                        ]
                                    }
                                ]
                            ]
                        }
                    }
                },
                "Handler": "key_server.server_handler",
                "MemorySize": 2048,
                "Role": {
                    "Fn::GetAtt": [
                        "SPEKEServerLambdaRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": 60
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "aadf7068-24e0-4bb0-93ed-95989660b34b"
                }
            }
        },
        "SPEKEServerLambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
                ],
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "lambda.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                },
                "Path": "/"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "a6dd1d5b-cea4-4bc5-9e14-fa1786d23adb"
                }
            }
        },
        "SPEKEServerAPI": {
            "Type": "AWS::ApiGateway::RestApi",
            "Properties": {
                "Body": {
                    "swagger": "2.0",
                    "info": {
                        "version": "2018-03-27T20:22:37Z",
                        "title": "SPEKEReferenceAPI"
                    },
                    "host": "q7m9eqv3o8.execute-api.us-east-1.amazonaws.com",
                    "basePath": "/EkeStage",
                    "schemes": [
                        "https"
                    ],
                    "paths": {
                        "/copyProtection": {
                            "post": {
                                "responses": {
                                    "200": {
                                        "description": "200 response",
                                        "headers": {
                                            "Speke-User-Agent": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "500": {
                                        "description": "500 response"
                                    }
                                },
                                "security": [{
                                    "sigv4": []
                                }],
                                "x-amazon-apigateway-integration": {
                                    "uri": {
                                        "Fn::Join": [
                                            "", [
                                                "arn:aws:apigateway:",
                                                {
                                                    "Ref": "AWS::Region"
                                                },
                                                ":lambda:path/2015-03-31/functions/",
                                                {
                                                    "Fn::GetAtt": [
                                                        "SPEKEServerLambda",
                                                        "Arn"
                                                    ]
                                                },
                                                "/invocations"
                                            ]
                                        ]
                                    },
                                    "responses": {
                                        "default": {
                                            "statusCode": "200",
                                            "responseParameters": {
                                                "method.response.header.Speke-User-Agent": "integration.response.header.Speke-User-Agent"
                                            }
                                        },
                                        "Error.*": {
                                            "statusCode": "500"
                                        }
                                    },
                                    "passthroughBehavior": "when_no_match",
                                    "httpMethod": "POST",
                                    "type": "aws_proxy"
                                }
                            }
                        }
                    },
                    "securityDefinitions": {
                        "sigv4": {
                            "type": "apiKey",
                            "name": "Authorization",
                            "in": "header",
                            "x-amazon-apigateway-authtype": "awsSigv4"
                        }
                    },
                    "x-amazon-apigateway-binary-media-types": [
                        "*/*"
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "c10a42b6-d938-47e5-9911-b28fc7f5dc55"
                }
            }
        },
        "SPEKEServerAPIDeployment": {
            "Type": "AWS::ApiGateway::Deployment",
            "Properties": {
                "Description": "Default stage deployment for SPEKE Server API",
                "RestApiId": {
                    "Ref": "SPEKEServerAPI"
                },
                "StageName": "EkeStage"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "61924e01-2bfa-4ffc-8bf7-d6c73308aaa2"
                }
            }
        },
        "SPEKEServerKeyBucketPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "SPEKEServerKeyBucketPolicy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Action": "s3:PutObject",
                        "Resource": {
                            "Fn::Join": [
                                "", [{
                                        "Fn::GetAtt": [
                                            "KeyBucket",
                                            "Arn"
                                        ]
                                    },
                                    "/*"
                                ]
                            ]
                        }
                    }]
                },
                "Roles": [{
                    "Ref": "SPEKEServerLambdaRole"
                }]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "14572b02-4435-4c63-a874-c0899caea339"
                }
            }
        },
        "MediaPackageInvokeSPEKEPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "MediaPackageInvokeSPEKEPolicy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Action": [
                            "execute-api:Invoke"
                        ],
                        "Resource": [{
                            "Fn::Join": [
                                "", [
                                    "arn:aws:execute-api:",
                                    {
                                        "Ref": "AWS::Region"
                                    },
                                    ":",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    ":",
                                    {
                                        "Ref": "SPEKEServerAPI"
                                    },
                                    "/*/POST/copyProtection"
                                ]
                            ]
                        }]
                    }]
                },
                "Roles": [{
                    "Ref": "MediaPackageInvokeSPEKERole"
                }]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "02a69591-f669-4142-8d0d-a22fc7c8534f"
                }
            }
        },
        "MediaPackageInvokeSPEKERole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "mediapackage.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "4b11cb71-2074-4b81-970a-1efed62a4f18"
                }
            }
        },
        "InvokeSPEKEServerPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:invokeFunction",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "SPEKEServerLambda",
                        "Arn"
                    ]
                },
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Join": [
                        "", [
                            "arn:aws:execute-api:",
                            {
                                "Ref": "AWS::Region"
                            },
                            ":",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":",
                            {
                                "Ref": "SPEKEServerAPI"
                            },
                            "/*"
                        ]
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "cfcd7377-0fba-4395-9f3b-5f504f4191b8"
                }
            }
        }
    },
